            android:gravity="center"
            android:maxLines="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Detailll"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="100dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#54000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#000"
                android:textStyle="bold|italic"
                android:text="Nomor BPOM"/>
            <TextView
                android:id="@+id/popupbpom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="No BPOM"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="100dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#54000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
      >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="12dp"
                android:layout_marginBottom="5dp"
            android:text="Masukkan Jumlah"/>
            <EditText
                android:gravity="center"
                android:id="@+id/popupjumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:inputType="number"
                android:hint="0"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColorHint="#ccdecd"
                android:textColor="#fff"
                android:background="@drawable/jenisitemrround"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">
            <Button
                android:id="@+id/beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Beli Item"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="@drawable/keranjang"
                android:textColor="#fff"
                android:textAllCaps="false"/>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
